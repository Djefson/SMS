                    </StackPanel>
                    <Button Content="Delete" HorizontalAlignment="Left" Height="30" Margin="226,368,0,0" VerticalAlignment="Top" Width="86"/>
                    <Button Content="New" HorizontalAlignment="Left" Height="30" Margin="121,368,0,0" VerticalAlignment="Top" Width="86"/>
                    <Button Content="Save" HorizontalAlignment="Left" Height="30" Margin="21,368,0,0" VerticalAlignment="Top" Width="86"/>
                    <Button Content="Update" HorizontalAlignment="Left" Height="30" Margin="226,412,0,0" VerticalAlignment="Top" Width="86"/>
                    <Button Content="Next" HorizontalAlignment="Left" Height="30" Margin="121,412,0,0" VerticalAlignment="Top" Width="86"/>
                    <Button Content="Previous" HorizontalAlignment="Left" Height="30" Margin="21,412,0,0" VerticalAlignment="Top" Width="86"/>
